---
const actualites = [
  {
    title: "Bon Dici",
    subtitle: "Alimentation Locale & Artisanale",
    image: "bondici"
  },
  {
    title: "Ouest France",
    subtitle: "Article de presse",
    image: "ouest-france"
  },
  {
    title: "Verre et Papilles",
    subtitle: "Notre page Facebook",
    image: "facebook"
  }
];
---

<section class="nos-actualites">
  <div class="container">
    <h2>Nos actualit√©s</h2>

    <div class="actualites-grid">
      {actualites.map((actu) => (
        <article class="actualite-card">
          <div class="actualite-image">
            <div class="placeholder-image">
              <span>Image {actu.title}</span>
            </div>
          </div>
          <div class="actualite-content">
            <div class="actualite-logo" data-logo={actu.image}>
              <span class="logo-text">{actu.title}</span>
            </div>
            <p class="actualite-subtitle">{actu.subtitle}</p>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .nos-actualites {
    background-color: var(--color-dark-bg);
    padding: 4rem 2rem;
    color: var(--color-white);
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    font-weight: 700;
  }

  .actualites-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .actualite-card {
    background-color: var(--color-white);
    border-radius: 8px;
    overflow: hidden;
    color: var(--color-text);
  }

  .actualite-image {
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #e0e0e0 0%, #c0c0c0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    font-style: italic;
  }

  .actualite-content {
    padding: 1rem;
    text-align: center;
  }

  .actualite-logo {
    margin-bottom: 0.5rem;
  }

  .logo-text {
    font-weight: 700;
    font-size: 1.1rem;
  }

  [data-logo="bondici"] .logo-text {
    color: #c0392b;
  }

  [data-logo="ouest-france"] .logo-text {
    color: #e74c3c;
  }

  [data-logo="facebook"] .logo-text {
    color: #3b5998;
  }

  .actualite-subtitle {
    font-size: 0.85rem;
    color: #666;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .actualites-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }

    h2 {
      font-size: 1.75rem;
    }
  }
</style>
